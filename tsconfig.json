{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "preserve", // âœ… REQUIRED
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
    "@/*": ["src/*"]
    },
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".eslintrc.cjs",
    "scripts",
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/components/**/*.stories.tsx",
    "src/app/api/impersonate/route.ts",
    "src/app/api/me/permissions/route.ts",
    "src/app/api/me/role/route.ts",
    "src/app/api/tally_cards/export/route.ts",
    "src/app/api/tally_cards/route.ts"
  ]
}
