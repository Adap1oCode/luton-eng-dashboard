# Public site config
NEXT_PUBLIC_SITE_URL=

# Supabase (public)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# Deployment
SITE_URL=
VERCEL_URL=
PORT=3000
NODE_ENV=development

# Auth/Scoping
AUTH_SCOPING_ENABLED=false
DEBUG_AUTH=true

# Logging
LOG_LEVEL=info

# Grafana Loki Configuration (for performance monitoring)
# Get these values from Grafana Cloud:
# 1. LOKI_URL: From Grafana → Connections → Loki data source → URL (add /loki/api/v1/push)
#    Example: https://logs-prod-us-central-0.grafana.net/loki/api/v1/push
# 2. LOKI_USER: Your Grafana username (usually a number or email)
# 3. LOKI_PASS: Grafana API key (create in Profile → API Keys)
LOG_ENABLE_LOKI=false
LOKI_URL=
LOKI_USER=
LOKI_PASS=

# Logtail Configuration (alternative logging service)
LOG_ENABLE_LOGTAIL=false
LOGTAIL_TOKEN=
